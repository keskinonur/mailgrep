{
  "name": "mailgrep",
  "version": "1.0.6",
  "description": "Download email attachments from Office 365 with incremental backup",
  "author": "Onur Keskin",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/keskinonur/mailgrep"
  },
  "keywords": [
    "email",
    "office365",
    "outlook",
    "attachments",
    "backup",
    "cli",
    "microsoft-graph"
  ],
  "module": "index.ts",
  "type": "module",
  "private": false,
  "bin": {
    "mailgrep": "./mailgrep"
  },
  "scripts": {
    "start": "bun run index.ts",
    "dev": "bun --watch index.ts",
    "build": "bun build --compile --minify index.ts --outfile mailgrep",
    "build:linux": "bun build --compile --minify index.ts --target=bun-linux-x64 --outfile mailgrep-linux-x64",
    "build:windows": "bun build --compile --minify index.ts --target=bun-windows-x64 --outfile mailgrep-windows-x64.exe",
    "build:all": "bun run build && bun run build:linux && bun run build:windows"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "@types/cli-progress": "^3.11.6"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "cli-progress": "^3.12.0",
    "commander": "^12.1.0",
    "ora": "^8.1.0"
  }
}
